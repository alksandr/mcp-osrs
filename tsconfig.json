{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "declaration": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ]
  }